{
  "name": "my-fullstack-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start:all": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "serve -s client/dist -l 3000",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "cd server && npm start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:production": "docker-compose -f docker-compose.production.yml up -d",
    "docker:debug": "docker-compose -f docker-compose.debug.yml up -d",
    "docker:deploy": "chmod +x docker-deploy.sh && ./docker-deploy.sh",
    "docker:deploy:prod": "chmod +x docker-deploy.sh && ./docker-deploy.sh production",
    "docker:deploy:debug": "chmod +x docker-deploy.sh && ./docker-deploy.sh debug",
    "docker:health": "chmod +x docker-health.sh && ./docker-health.sh",
    "deploy:chmod": "chmod +x build-and-deploy.sh deploy-on-vps.sh docker-deploy.sh docker-health.sh",
    "deploy:build": "./build-and-deploy.sh",
    "deploy:vps": "./deploy-on-vps.sh",
    "deploy:all": "npm run deploy:build && npm run deploy:vps",
    "deploy": "npm run deploy:chmod && npm run deploy:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "javascript-obfuscator": "^4.1.1"
  }
}
